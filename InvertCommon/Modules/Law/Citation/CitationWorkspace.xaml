<Page x:Class="Invert911.Citation.CitationWorkspace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Cit="clr-namespace:Invert911.Citation"
    Height="457" Width="543" Loaded="UserControl_Loaded" ShowsNavigationUI="True">
    <Grid>
        <TabControl Name="MainTabControl" Margin="0,0,0,7" TabStripPlacement="Top">
            <TabItem  Header="Main">
                <DockPanel LastChildFill="True">
                    <Cit:CitationMenu x:Name="MainCitationMenu" Width="Auto" Height="Auto"></Cit:CitationMenu>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
