<Page x:Class="Invert911.MDT.SplashPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="818">
    <DockPanel Background="Black">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center" Foreground="Red" FontSize="16">Invert 911 - Application Loading ...</Label>
        <GroupBox DockPanel.Dock="Bottom" Header="Status" >
            <TextBox Height="120" Name="StatusTextBox" BorderThickness="0" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"  Background="Black" Foreground="Red"></TextBox>
        </GroupBox>
        <Image Source="/Invert911.InvertCommon;component/Images/PoliceAtNight.jpg"></Image>
    </DockPanel>
</Page>
